<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/txt_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="可預約" />

        <TextView
            android:id="@+id/txt_AssetSN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="財編" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Img_Fac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:srcCompat="@mipmap/avatar_man" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_fac_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="落下試驗機" />
            <TextView
                android:id="@+id/txt_fac_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="存放位置" />
            <TextView
                android:id="@+id/txt_save_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保管單位" />
            <TextView
                android:id="@+id/txt_save_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保管人員" />
            <TextView
                android:id="@+id/txt_resource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用成本" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_booking_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="預約狀況" />

                <TextView
                    android:id="@+id/txt_fac_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="詳細資料" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>